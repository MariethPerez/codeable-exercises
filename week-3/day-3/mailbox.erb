<html>
  <head>
    <style>
      table {
        border-collapse: collapse;
      }
      td, th {
        border: 1px solid black;
        padding: 1em;
      }
    </style>
  </head>
  <body>
    <h1><%= mailbox.title%></h1>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>From</th>
          <th>Subject</th>
        </tr>
      </thead>
      <tbody><%mailbox.emails.length.times do |i|%>
        <tr>
        <td><%= mailbox.emails[i].date %></td>
        <td><%= mailbox.emails[i].from %></td>
        <td><%= mailbox.emails[i].subject %></td>
        </tr><% end %>
      </tbody>
    </table>
  </body>
</html>